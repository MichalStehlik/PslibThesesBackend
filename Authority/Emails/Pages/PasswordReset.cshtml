@using Authority.Emails.ViewModels
@model ConfirmEmailViewModel
@{
    ViewData["Title"] = "Resetování hesla";
}
@if (Model.User.Gender == Authority.Data.Gender.Male)
{
    <p>Milý uživateli,</p>
}
else
{
    <p>Milá uživatelko,</p>
}
<p>obdrželi jsme žádost o resetování hesla pro uživatele z Vaší emailové adresy.</p>
<p>K resetování použijte následující odkaz.</p>
<div style="text-align:center">
    <a style="display:inline-block; padding: 10px; text-decoration:none; color:white; background-color: green;" href="@Html.Raw(Model.ConfirmEmailUrl)">Resetovat heslo</a>
</div>
<p style="color: red; word-wrap: break-word"><code>@Model.ConfirmationCode</code></p>
