@using Authority.Emails.ViewModels

@model ConfirmEmailViewModel
@{
    ViewData["Title"] = "Vítejte";
}
@if (Model.User.Gender == Authority.Data.Gender.Female)
{
    <p>Milá uživatelko,</p>
}
else
{
    <p>Milý uživateli,</p>
}
<p>Váš účet v naší aplikaci je téměř připraven. Zbývá už jen jeden drobný krůček: potvrdit existenci a vlastnictví Vámi uvedené emailové adresy.</p>
<p>Za registraci a potvrzení adresy předem děkujeme.</p>
<p>Můžete použít připravené tlačítko.</p>
<div style="text-align:center">
  <a style="display:inline-block; padding: 10px; text-decoration:none; color:white; background-color: green;" href="@Html.Raw(Model.ConfirmEmailUrl)">Potvrdit email</a>
</div>
<p style="color: red; word-wrap: break-word;"><code>@Model.ConfirmationCode</code></p>
