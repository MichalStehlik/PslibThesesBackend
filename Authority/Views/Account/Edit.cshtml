@model EditUserInputModel
@using Authority.Data
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Editace profilu</h1>
    <partial name="_ValidationSummary" />
    <form method="post" asp-route="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
            <p>Neměňte uživatelské jméno bez vážného důvodu.</p>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <div>
                <label class="radio-inline">
                    @Html.RadioButtonFor(x => x.Gender, Gender.Male) Muž
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(x => x.Gender, Gender.Female) Žena
                </label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" name="button" value="login">Uložení</button>
        <a asp-action="Show" class="btn btn-secondary">Zpět</a>
    </form>
</div>

