@using IdentityServer4.EntityFramework.Entities
@model IdentityResource

@{
    ViewData["Title"] = "Edit";
}

<h1>Editace zdroje identity</h1>
@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Změna vlastností</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayName"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="Enabled">
                    <input asp-for="Enabled" />Enabled
                </label>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="Required">
                    <input asp-for="Required" />Required
                </label>
                <span asp-validation-for="Required" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="Emphasize">
                    <input asp-for="Emphasize" />Emphasize
                </label>
                <span asp-validation-for="Emphasize" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="ShowInDiscoveryDocument">
                    <input asp-for="ShowInDiscoveryDocument" />ShowInDiscoveryDocument
                </label>
                <span asp-validation-for="ShowInDiscoveryDocument" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Uložit</button> <a class="btn" asp-action="Index">Zpět</a>
        </form>
    </div>
</div>

