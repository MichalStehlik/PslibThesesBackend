@using Authority.Data
@using IdentityServer4.EntityFramework.Entities
@model Client

@{
    ViewData["Title"] = "Delete";
}

<h1>Odstranění klienta</h1>

<h3>Opravdu chcete klient odstranit?</h3>
<div>
    <h4>Vlastnosti klienta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Odstranit" class="btn btn-danger" /> <a class="btn btn-secondary" asp-action="Index">Zpět</a>
    </form>
</div>