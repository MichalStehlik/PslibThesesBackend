@using IdentityServer4.EntityFramework.Entities
@using Authority.Controllers.UI.Dashboard
@model ClientScopeInputModel

@{
    ViewData["Title"] = "CreateScope";
}

<h1>Nový scope</h1>
@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<form method="post">
    <h2>Přidání nového scope ke klientovi</h2>
    <hr />
    <input type="hidden" asp-for="ClientId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Scope"></label>
        <input asp-for="Scope" class="form-control" />
        <span asp-validation-for="Scope" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Uložit</button>
    <a class="btn" asp-action="Details" asp-route-id="@Model.ClientId">Zpět</a>
</form>
